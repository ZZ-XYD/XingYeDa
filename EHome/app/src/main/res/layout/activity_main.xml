<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
     >

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="240dip"
        android:layout_height="wrap_content"
        android:hint="username" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUsername"
        android:hint="password" />

    <EditText
        android:id="@+id/editOemId"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:hint="OEM id"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editOemId"
        android:text="登录"/>
    <Button
        android:id="@+id/btnQueryMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询信息"
        android:layout_below="@+id/editOemId"
        android:layout_toRightOf="@+id/btnLogin"/>
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_below="@+id/editOemId"
        android:layout_toRightOf="@+id/btnQueryMsg"/>

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:text="停止"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnQuit"
        android:text="..."/>

    <EditText
        android:id="@+id/editPid"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnQuit"
        android:hint="PID" />
    <Button
        android:id="@+id/btnOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPid"
        android:text="开"/>
    <Button
        android:id="@+id/btnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPid"
        android:layout_toRightOf="@+id/btnOn"
        android:text="关"/>

    <Button
        android:id="@+id/btnBindDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editWifiPassword"
        android:text="绑定设备"/>
    <Button
        android:id="@+id/btnDeleteBind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editWifiPassword"
        android:layout_toRightOf="@+id/btnBindDevice"
        android:text="删除绑定"/>
    <TextView
        android:id="@+id/txtBindStatus"
        android:layout_width="240dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editWifiPassword"
        android:layout_toRightOf="@+id/btnDeleteBind"
        android:text="..."/>

    <Button
        android:id="@+id/btnToggleDisableOfflineNotifySetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBindDevice"
        android:text="开关禁用离线通知"/>

    <EditText
        android:id="@+id/editWifiPassword"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:hint="Wifi password"
        android:layout_below="@+id/btnOn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>