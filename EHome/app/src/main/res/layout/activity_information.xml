<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_orange" >

            <TextView
                android:id="@+id/setinfo_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/back"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:text="@string/information"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@mipmap/menu_background" >

            <com.xingyeda.ehome.view.MaskedImage
                android:id="@+id/info_user_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:background="@mipmap/head_bg" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDECE8"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/info_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                     >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/me_setinfo"
                        android:drawablePadding="10dp"
                        android:text="@string/menu_setinfo_name_text"
                        android:textSize="@dimen/text_size_18"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@mipmap/next" />

                    <TextView
                        android:id="@+id/info_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="35dp"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_18"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDECE8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/me_username"
                        android:drawablePadding="10dp"
                        android:text="@string/menu_setinfo_username_text"
                        android:textSize="@dimen/text_size_18"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/info_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="35dp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_18" />
                </RelativeLayout>
                 <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDECE8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                     >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/me_phone"
                        android:drawablePadding="10dp"
                        android:text="@string/menu_setinfo_phone_text"
                        android:textSize="@dimen/text_size_18"
                        android:layout_centerVertical="true"
                         />

                    <TextView
                        android:id="@+id/info_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="35dp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_18" />
                </RelativeLayout>
                 <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDECE8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >
                    <!--<RelativeLayout
                    android:id="@+id/info_community "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >-

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/me_xiaoqu"
                        android:drawablePadding="10dp"
                        android:text="@string/menu_setinfo_xiaoqu_text"
                        android:textSize="@dimen/text_size_18"
                        android:layout_centerVertical="true"
                         />

                    <!- <Spinner
                        android:id="@+id/info_spn_community "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x30"
                        android:background="@drawable/layout_white"
                        android:textSize="@dimen/text_size_18" /> -->

                    <TextView
                        android:id="@+id/info_community_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="35dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_18"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:contentDescription="@null"
                        android:src="@mipmap/next"
                        android:visibility="invisible"
                        />
                </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:background="@color/white"
                    android:layout_marginTop="10dp"
                     >

                <RelativeLayout
                    android:id="@+id/info_alternate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/me_reserve_phone"
                        android:drawablePadding="10dp"
                        android:text="@string/menu_setinfo_reserve_phone_text"
                        android:textSize="@dimen/text_size_18"
                        android:layout_centerVertical="true"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:contentDescription="@null"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:src="@mipmap/next" />

                    <TextView
                        android:id="@+id/info_alternate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="35dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_18"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDECE8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>



            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/me_type"
                        android:drawablePadding="10dp"
                        android:text="@string/menu_setinfo_type_text"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:id="@+id/info_usertype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="35dp"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_18"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/share_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:drawableLeft="@mipmap/share_type"
                            android:drawablePadding="10dp"
                            android:text="@string/setinfo_share_type"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size_18" />

                        <TextView
                            android:id="@+id/info_share_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="35dp"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_18"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- <Button
        android:id="@+id/info_amend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_theme"
        android:text="@string/menu_setinfo_confirm_text"
        android:textColor="@color/white" /> -->

</RelativeLayout>