<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/on_off_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/theme_orange"
        android:padding="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/on_off_type"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/smart_home_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                />
            <TextView
                android:id="@+id/smart_home_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18"
                android:gravity="center"
                />
        </LinearLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
            android:id="@+id/smart_home_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/but_smart_home_off"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
            />
            <ImageView
                android:id="@+id/smart_home_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/but_smart_home_on"
                android:layout_toLeftOf="@id/smart_home_off"
                />
            <ImageView
                android:id="@+id/smart_home_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/but_smart_home_set"
                android:layout_toRightOf="@id/smart_home_off"
                />
        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>


</android.support.percent.PercentRelativeLayout>