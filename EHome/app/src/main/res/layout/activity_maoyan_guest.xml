<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/guest_background"
    >
    <TextView
        android:id="@+id/guset_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您家有人在按门铃"
        android:textSize="@dimen/text_size_25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/guest_head"
        android:layout_below="@id/guset_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/maoyan_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="挂断"
                android:drawableTop="@mipmap/hangup_big"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/maoyan_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接通"
                android:drawableTop="@mipmap/connect_big"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
