       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/menu_background"
        android:orientation="horizontal">
        <RelativeLayout 
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
            

        <TextView
            android:id="@+id/menu_about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/back"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_about_title_text"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_25" />
        </RelativeLayout>

    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/login_software_logo"
        android:contentDescription="@null"
        android:layout_marginTop="20dp"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <RelativeLayout 
                android:id="@+id/graded" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/graded"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_18"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
               android:gravity="center"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
            <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDECE8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <RelativeLayout 
                android:id="@+id/function" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
             android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/function"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_18"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:gravity="center"
                android:layout_centerVertical="true"/>
            
        </RelativeLayout>
         <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDECE8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <RelativeLayout 
                android:id="@+id/version_updating" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
             android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_updating"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_18"/>
            <TextView
                android:id="@+id/versions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="@string/versions"
                />
        </RelativeLayout>
        
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_name"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_18"
        />
        <LinearLayout 
            android:id="@+id/company_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_about_know_text"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_size_15"
        />
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_about_url_text"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/blue_dark"
        />
    </LinearLayout>
        <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_about_contact_text"
        android:textSize="@dimen/text_size_15"
        />
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_about_number_text"
        android:textSize="@dimen/text_size_15"
        />
    </LinearLayout>
    
        
    </LinearLayout>
    </RelativeLayout>
    
    
    
    
    
    

</LinearLayout>
